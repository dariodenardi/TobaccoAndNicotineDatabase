
@{
    ViewBag.Title = "Profile";
    ViewBag.PageTitle = "Profile";
    ViewBag.TitlePrincipal = "Change Account Settings";
}

<div class="panel panel-color panel-dark">
    <div class="panel-heading">
        <h3 class="panel-title">Profile Picture</h3>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("ChangePhoto", "Manage", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form -horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="col-md-2 control-label">Load Picture</label>
                <div class="col-md-10">
                    <input type="file" name="postedFile" class="filestyle" data-buttonname="btn-default">
                    @Html.ValidationMessage("", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <br />
                    <input type="submit" value="Change picture" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- Bootstrap File Style -->
    @Scripts.Render("~/Scripts/filestyle")
}