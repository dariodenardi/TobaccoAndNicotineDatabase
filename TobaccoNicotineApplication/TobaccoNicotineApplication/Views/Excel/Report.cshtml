
@{
    ViewBag.Title = "Report";
    ViewBag.PageTitle = "Report";
    ViewBag.TitlePrincipal = "Download File/s";
}

<div class="panel panel-color panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Regions</h3>
    </div>
    <div class="panel-body">
        <!-- col-->
        <div class="col-md-6">
            <h4 class="m-t-0 m-b-30">Report about Regions</h4>

            <div class="form-group">
                <label class="control-label">Select first year</label>
                <select class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label">Select second year</label>
                <select class="form-control">
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                    <option>5</option>
                </select>
            </div>
            <button type="submit" class="btn btn-default waves-effect waves-light" onclick="location.href='@Url.Action("GenerateReportRegion","Excel")'">Generate Report</button>
        </div>
        <!-- col-->
    </div>
</div>

<div class="panel panel-color panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Countries</h3>
    </div>
    <div class="panel-body">
        Report about Countries
        <br />
        <br />
        <button type="submit" class="btn btn-default waves-effect waves-light" onclick="location.href='@Url.Action("GenerateReportCountry","Excel")'">Generate Report</button>
    </div>
</div>

<div class="panel panel-color panel-info">
    <div class="panel-heading">
        <h3 class="panel-title">Variables</h3>
    </div>
    <div class="panel-body">
        Report about Variables
        <br />
        <br />
        <button type="submit" class="btn btn-default waves-effect waves-light" onclick="location.href='@Url.Action("GenerateReportVariable","Excel")'">Generate Report</button>
    </div>
</div>