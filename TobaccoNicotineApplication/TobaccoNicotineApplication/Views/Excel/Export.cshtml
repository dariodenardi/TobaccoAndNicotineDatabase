@using TobaccoNicotineApplication.Utilities

@{
    ViewBag.Title = "Export";
    ViewBag.PageTitle = "Export";
    ViewBag.TitlePrincipal = "Select Fields";

    var pmiCode = StaticName.PmiCoding();
    var continentName = StaticName.ContinentName();
    var regionName = StaticName.RegionName();
    var countryCode = StaticName.CountryCode();
    var countryName = StaticName.CountryName();
    var measurementUnitName = StaticName.MeasurementUnitName();
    var phaseName = StaticName.PhaseName();
    var number = StaticName.Number();
    var variableName = StaticName.VariableName();
    var varLc = StaticName.VarLc();
    var year = StaticName.Year();
}

@section styles {
    <!-- Datatables -->
    @Styles.Render("~/Content/datatables")
    <link href="//cdn.datatables.net/buttons/1.5.6/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css">

    <!-- Sweet Alert -->
    @Styles.Render("~/Content/sweetalert")
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-color panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Countries</h3>
            </div>
            <div class="panel-body">

                <table id="country" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@countryCode</th>
                            <th>@countryName</th>
                            <th>@continentName</th>
                            <th>@regionName</th>
                            <th>@pmiCode</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Countries)
                        {
                            <tr>
                                <td></td>
                                <td>@item.CountryCode</td>
                                <td>@item.CountryName</td>
                                <td>@item.ContinentName</td>
                                <td>@item.RegionName</td>
                                <td>@item.PmiCoding</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<!-- start row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-color panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Variables</h3>
            </div>
            <div class="panel-body">

                <table id="variable" class="display" style="width:100%">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@number</th>
                            <th>@variableName</th>
                            <th>@phaseName</th>
                            <th>@measurementUnitName</th>
                            <th>@varLc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.Variables)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Number</td>
                                <td>@item.Name</td>
                                <td>@item.PhaseName</td>
                                <td>@item.MeasurementUnitName</td>
                                <td>@item.VarLc</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>
<!-- end row -->
